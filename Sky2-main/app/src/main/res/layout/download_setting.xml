<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/method"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/web_back_11"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:onClick="imageClick_sub_fourth_5"
            android:src="@drawable/ic_back"
            android:tint="?attr/colorOnSurface" />

        <TextView
            android:id="@+id/textMethod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/web_back_11"
            android:text="Tệp đã tải xuống"
            android:textColor="?attr/colorOnSurface"
            android:textSize="24sp" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar5"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/method" />

    <RelativeLayout
        android:id="@+id/tab_view_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/progressBar5">

        <TextView
            android:id="@+id/text_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Vị trí tải xuống"
            android:textSize="17sp"
            android:textColor="?attr/colorOnSurface" />

        <TextView
            android:id="@+id/text_quaysonhanh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_tab"
            android:layout_marginStart="10dp"
            android:text="Tệp đã tải xuống  /storage/emulated/0/Download"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tab_view_2"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@id/tab_view_1">

        <TextView
            android:id="@+id/text_back_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Hỏi vị trí lưu tệp"
            android:textSize="17sp"
            android:textColor="?attr/colorOnSurface" />

        <Switch
            android:id="@+id/switch_save_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp" />

        <TextView
            android:id="@+id/text_back_tab_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_back_tab"
            android:layout_marginStart="10dp"
            android:text="Đang bật"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tab_view_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tab_view_2"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/text_new_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Tùy chọn tải xuống"
            android:textColor="?attr/colorOnSurface"
            android:textSize="17sp" />

        <Switch
            android:id="@+id/switch_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp" />

        <TextView
            android:id="@+id/text_status_new_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_new_tab"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:text="Các tệp PDF đã tải xuống tự động mở bằng"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/text_status_new_tab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_status_new_tab"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:text="một trong các trình PDF trên thiết bị của bạn"
            android:textSize="15sp" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
